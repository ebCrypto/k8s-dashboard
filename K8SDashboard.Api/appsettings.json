{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "k8s-dashboard"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "DefaultNamespace": "kube-system",
    "KubeApiTimeout": 10,
    "K8sLabelApp": "app",
    "K8sLabelInternalIp": "InternalIp",
    "K8sLabelAksZone": "topology.kubernetes.io\/zone",
    "ApiTitle": "K8SDashboard API",
    "ApiDescription": "A simple Kubernetes API, exposing ingress routes, pods and nodes",
    "ApiContactName": "ebCrypto",
    "ApiContactUrl": "https://github.com/ebCrypto",
    "ApiLicenseName": "GNU General Public License v3.0",
    "ApiLicenseUrl": "https://github.com/ebCrypto/k8s-dashboard/blob/main/LICENSE"
  }
}
